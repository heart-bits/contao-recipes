{
  "name": "heart-bits/contao-recipes-bundle",
  "description": "Recipes extension for Contao Open Source CMS",
  "keywords": [
    "recipes",
    "categories",
    "ingredients",
    "units",
    "cooking",
    "rezepte",
    "kategorien",
    "zutaten",
    "maßeinheiten",
    "kochen"
  ],
  "type": "contao-bundle",
  "license": "LGPL-3.0+",
  "authors": [
    {
      "name": "Sascha Wustmann – Mediengestalter & Webentwickler",
      "homepage": "https://saschawustmann.com",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "hi@saschawustmann.com",
    "issues": "https://github.com/heart-bits/contao-recipes/issues",
    "source": "https://github.com/heart-bits/contao-recipes"
  },
  "require": {
    "php": "^8.2",
    "contao/core-bundle": "^4.13 || ^5.3"
  },
  "autoload": {
    "psr-4": {
      "Heartbits\\ContaoRecipes\\": "src/"
    }
  },
  "extra": {
    "contao-manager-plugin": "Heartbits\\ContaoRecipes\\ContaoManager\\Plugin"
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "contao/manager-plugin": true,
      "contao-community-alliance/composer-plugin": true,
      "php-http/discovery": false
    }
  },
  "prefer-stable": true
}
